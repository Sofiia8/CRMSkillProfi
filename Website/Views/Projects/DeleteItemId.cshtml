@model Website.Models.Project

@{
    ViewData["Title"] = "Edit Project";
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Varela+Round" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/css/styles.css" rel="stylesheet" />
</head>
<body>
    <header class="masthead-project p-3 p-md-4 p-lg-5">
        
        <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 my-0">
                <div class="col mb-3">
                    <div class="card p-4 h-100">
                        <div class="d-flex justify-content-center">
                            <h3 class="text-uppercase text-danger my-4">Удалить проект?</h3>
                        </div>
                        <div class="card-body text-center" style="border: 1px solid #a16468 !important; border-radius: 0.375rem;">
                            <div>
                                <img src=@("/assets/img/"+Model.ImageId) width="180">
                            </div>
                            <hr class="my-4 mx-auto" />
                            <div class="text-black my-4">@Model.Name</div>
                            <div class="small text-start text-black">
                                @Model.Description
                            </div>
                        </div>
                        <form method="get" asp-controller="Projects" asp-action="ConfirmDeleteItem">
                            <div class="container px-5 pt-4 my-2 d-flex">
                                <input type="hidden" asp-for=@Model.Id />
                                <input class="btn btn-danger" id="add" name="add" type="submit" placeholder="Удалить" value="Удалить" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </header>
</body>
</html>