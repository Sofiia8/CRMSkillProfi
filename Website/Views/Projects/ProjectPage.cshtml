@model Website.Models.ProjectSettingViewModel

@{
    ViewData["Title"] = "Project Page";
}
<header class="masthead-project">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 mb-0">
            <div class="col mb-3">
                <div class="card py-4 h-100">
                    <div class="card-body text-center">
                        <div>
                            <img src=@("/assets/img/"+Model.Project_.ImageId) width="180">
                        </div>
                        <hr class="my-4 mx-auto" />
                        <div class="text-black my-4">@Model.Project_.Name</div>
                        <div class="small text-start text-black">
                            @Model.Project_.Description
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>